{
  "manifest_version": 2,
  "name": "Auto Close Tabs",
  "version": "1.0",
  "description": "Automatically close inactive tabs after a configurable time period",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "webNavigation"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Auto Close Tabs Settings"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}